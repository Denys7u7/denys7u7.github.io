---
interface Props {
  active: string;
}

const { active } = Astro.props;
---

<label
  class="block lg:hidden fixed w-full bg-[#11161c] top-0 right-0 m-0 px-5 py-2 h-11 z-30 cursor-pointer"
  for="toogle"
>
  <svg
    class="h-full fill-[--white] cursor-pointer"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 448 512"
    ><path
      d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"
    ></path></svg
  >
</label>
<input type="checkbox" name="toogle" id="toogle" hidden />
<header
  class="block bg-[--bg-main] fixed h-full w-full top-0 transition-all -left-full lg:hidden z-20"
>
  <nav class="flex flex-col h-full">
    <h1 class="text-center text-5xl md:text-7xl font-semibold my-14">Menú</h1>
    <ul class="flex flex-col items-center">
      <li class="w-4/5 md:3/5 my-2">
        <a
          class={`p-3 w-full h-12  text-[--white] font-medium flex  text-code border-b border-[--white] ${
            active == "Home" ? "active-mobile" : ""
          }`}
          href="/"
          ><svg
            class="w-6 h-6 fill-[--white] flex-none"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 576 512"
          >
            <path
              d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"
            ></path></svg
          ><span class="flex-none mx-3">¿Quien soy?</span></a
        >
      </li>
      <li class="w-4/5 md:3/5 my-2">
        <a
          class={`p-3 w-full h-12  text-[--white] font-medium flex  text-code border-b border-[--white] ${
            active == "Experience" ? "active-mobile" : ""
          }`}
          href="/Experience"
        >
          <svg
            class="w-6 h-6 fill-[--white] flex-none"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 512 512"
          >
            <path
              d="M40 48C26.7 48 16 58.7 16 72v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V72c0-13.3-10.7-24-24-24H40zM192 64c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zm0 160c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zm0 160c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zM16 232v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V232c0-13.3-10.7-24-24-24H40c-13.3 0-24 10.7-24 24zM40 368c-13.3 0-24 10.7-24 24v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V392c0-13.3-10.7-24-24-24H40z"
            ></path></svg
          >
          <span class="mx-3">Experiencia</span>
        </a>
      </li>
      <li class="w-4/5 md:3/5 my-2">
        <a
          class={`p-3 w-full h-12  text-[--white] font-medium flex text-code border-b border-[--white] ${
            active == "Contact" ? "active-mobile" : ""
          }`}
          href="/Contact"
        >
          <svg
            class="w-6 h-6 fill-[--white] flex-none"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 512 512"
          >
            <path
              d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"
            ></path></svg
          >
          <span class="mx-3">Contactame</span>
        </a>
      </li>
    </ul>
  </nav>
</header>

<header class="hidden lg:block fixed h-full z-20 top-0">
  <nav class="h-full flex items-center">
    <ul class="flex flex-col items-start">
      <li class="m-1">
        <a
          class={`p-3 w-12 h-12 hover:w-44 transition-all rounded-full bg-white text-[#060606] font-medium flex overflow-hidden text-code ${
            active == "Home" ? "active" : ""
